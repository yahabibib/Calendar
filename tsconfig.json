{
  "extends": "@react-native/typescript-config",
  "compilerOptions": {
    /* 显式告诉 TS 编译器这里是 React Native 环境 */
    "jsx": "react-native",
    /* 允许合成默认导入 (可选，推荐加上，防止 import React 报错) */
    "allowSyntheticDefaultImports": true,
    /* 基础路径配置 */
    "paths": {
      /* 核心别名：@/ 指向 src/ */
      "@/*": ["./src/*"],
      
      /* 可选：如果你喜欢更细分的别名 */
      "@features/*": ["./src/features/*"],
      "@components/*": ["./src/components/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@theme/*": ["./src/theme/*"],
      "@utils/*": ["./src/utils/*"],
      "@types/*": ["./src/types/*"]
    },
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["**/node_modules", "**/Pods"]
}